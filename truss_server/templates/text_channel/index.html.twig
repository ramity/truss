{% extends 'base.html.twig' %}

{% block title %}TextChannel index{% endblock %}

{% block body %}
    <h1>TextChannel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text_channel in text_channels %}
            <tr>
                <td>{{ text_channel.id }}</td>
                <td>{{ text_channel.name }}</td>
                <td>{{ text_channel.createdAt ? text_channel.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ text_channel.updatedAt ? text_channel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_text_channel_show', {'id': text_channel.id}) }}">show</a>
                    <a href="{{ path('app_text_channel_edit', {'id': text_channel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_text_channel_new') }}">Create new</a>
{% endblock %}
